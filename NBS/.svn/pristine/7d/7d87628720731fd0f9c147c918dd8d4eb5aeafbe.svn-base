	  private boolean readELRErrorQueue(Date actualDate)
	  {
		  DateFormat dateFormat = new SimpleDateFormat("MM/dd/YYYY HH:mm:ss");
		  boolean error=false;
		  
		  HashMap<String, String> months = new HashMap<String, String>();
		  months.put("Jan","01");
